		{
			"name": "[concat(parameters('factoryName'), '/dataflow1')]",
			"type": "Microsoft.DataFactory/factories/dataflows",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "DSinput",
								"type": "DatasetReference"
							},
							"name": "MovieDataSource1"
						}
					],
					"sinks": [
						{
							"dataset": {
								"referenceName": "DSoutput",
								"type": "DatasetReference"
							},
							"name": "MovieDataSink"
						}
					],
					"transformations": [
						{
							"name": "FilterYear"
						}
					],
					"scriptLines": [
						"source(output(",
						"          Film as string,",
						"          Genre as string,",
						"          {Lead Studio} as string,",
						"          {Audience score %} as string,",
						"          Profitability as string,",
						"          {Rotten Tomatoes %} as string,",
						"          {Worldwide Gross} as string,",
						"          Year as string",
						"     ),",
						"     allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     ignoreNoFilesFound: false) ~> MovieDataSource1",
						"MovieDataSource1 filter(toInteger(Year) >= 2002 && toInteger(Year)<=2007) ~> FilterYear",
						"FilterYear sink(allowSchemaDrift: true,",
						"     validateSchema: false,",
						"     umask: 0022,",
						"     preCommands: [],",
						"     postCommands: [],",
						"     skipDuplicateMapInputs: true,",
						"     skipDuplicateMapOutputs: true) ~> MovieDataSink"
					]
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DSinput')]",
				"[concat(variables('factoryId'), '/datasets/DSoutput')]"
			]
		},
